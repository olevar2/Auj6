# AUJ Platform Environment Configuration
# Copy this file to .env and update with your actual values

# MetaApi Configuration (Primary for Linux)
AUJ_METAAPI_TOKEN=your_metaapi_token_here
AUJ_METAAPI_ACCOUNT_ID=your_metaapi_account_id_here

# Platform Detection
AUJ_PLATFORM=linux
AUJ_DEPLOYMENT_TYPE=production
AUJ_DEBUG_MODE=false
AUJ_DEMO_MODE=true

# Database Configuration
AUJ_DB_USER=auj_user
AUJ_DB_PASS=your_secure_password_here
AUJ_DB_URL=sqlite:///data/auj_platform.db

# Message Broker (RabbitMQ) Configuration
AUJ_RABBITMQ_PASSWORD=your_rabbitmq_password_here

# Data Provider Configuration
AUJ_MT5_LOGIN=your_mt5_login
AUJ_MT5_PASSWORD=your_mt5_password
AUJ_MT5_SERVER=your_mt5_server

# Yahoo Finance - No API key required (uses free yfinance library)
# AUJ_YAHOO_API_KEY=not_needed_anymore

# Binance API (if enabled)
AUJ_BINANCE_API_KEY=your_binance_api_key
AUJ_BINANCE_API_SECRET=your_binance_api_secret

# Security
AUJ_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Docker Secrets (for production)
POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password
RABBITMQ_PASSWORD_FILE=/run/secrets/rabbitmq_password

# Notification Services (optional)
AUJ_EMAIL_SMTP_SERVER=smtp.gmail.com
AUJ_EMAIL_SMTP_PORT=587
AUJ_EMAIL_USERNAME=your_email@gmail.com
AUJ_EMAIL_PASSWORD=your_email_password

AUJ_DISCORD_WEBHOOK_URL=your_discord_webhook_url
AUJ_TELEGRAM_BOT_TOKEN=your_telegram_bot_token
AUJ_TELEGRAM_CHAT_ID=your_telegram_chat_id

# CI/CD Configuration
GITHUB_TOKEN=your_github_token_for_actions

# Monitoring
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# Feature Flags Override (optional)
AUJ_ENABLE_LIVE_TRADING=false
AUJ_ENABLE_MESSAGING=true
AUJ_ENABLE_MONITORING=true
AUJ_ENABLE_CI_CD=true
