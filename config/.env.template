# AUJ Platform Environment Variables Template
# Copy this file to .env and fill in the actual values
# This file contains environment variable definitions for Linux deployment

# =============================================================================
# MetaApi Configuration (Primary Provider)
# =============================================================================
# MetaApi API Token - Get from https://app.metaapi.cloud/
AUJ_METAAPI_TOKEN=your_metaapi_token_here

# MetaApi Account ID - Your trading account ID
AUJ_METAAPI_ACCOUNT_ID=your_metaapi_account_id_here

# MetaApi Application Settings
AUJ_METAAPI_APPLICATION=AUJ-Platform
AUJ_METAAPI_DOMAIN=auj-platform.com

# =============================================================================
# Database Configuration
# =============================================================================
# Database URL (SQLite by default for simplicity)
AUJ_DB_URL=sqlite:///data/auj_platform.db

# For PostgreSQL (uncomment and configure if needed)
# AUJ_DB_URL=postgresql://username:password@localhost:5432/auj_platform
# AUJ_DB_USER=auj_user
# AUJ_DB_PASS=your_db_password_here
# AUJ_DB_HOST=localhost
# AUJ_DB_PORT=5432
# AUJ_DB_NAME=auj_platform

# Database Pool Settings
AUJ_DB_POOL_SIZE=10
AUJ_DB_MAX_OVERFLOW=20
AUJ_DB_POOL_TIMEOUT=30

# =============================================================================
# Security Configuration
# =============================================================================
# Encryption Key for sensitive data (generate a secure random key)
AUJ_ENCRYPTION_KEY=your_256_bit_encryption_key_here

# API Key for external access
AUJ_API_KEY=your_api_key_here

# Secret Key for session management
AUJ_SECRET_KEY=your_secret_key_here

# JWT Secret for authentication
AUJ_JWT_SECRET=your_jwt_secret_here

# =============================================================================
# Redis Configuration (Optional - for caching)
# =============================================================================
# Redis URL
AUJ_REDIS_URL=redis://localhost:6379/0

# Redis Password (if authentication is enabled)
AUJ_REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# Message Broker Configuration (RabbitMQ)
# =============================================================================
# RabbitMQ Password
AUJ_RABBITMQ_PASSWORD=your_rabbitmq_password_here

# RabbitMQ URL
AUJ_RABBITMQ_URL=amqp://auj_user:your_rabbitmq_password_here@localhost:5672//auj

# =============================================================================
# Application Configuration
# =============================================================================
# Environment Mode
AUJ_ENVIRONMENT=production
AUJ_DEBUG_MODE=false
AUJ_DEMO_MODE=true

# Platform Detection
AUJ_PLATFORM=linux
AUJ_DEPLOYMENT_TYPE=production

# Logging Configuration
AUJ_LOG_LEVEL=INFO
AUJ_LOG_DIR=logs
AUJ_LOG_FILE=auj_platform.log

# =============================================================================
# API Configuration
# =============================================================================
# API Server Settings
AUJ_API_HOST=0.0.0.0
AUJ_API_PORT=8000
AUJ_API_WORKERS=4

# Dashboard Settings
AUJ_DASHBOARD_HOST=0.0.0.0
AUJ_DASHBOARD_PORT=8501

# =============================================================================
# Trading Configuration
# =============================================================================
# Risk Management
AUJ_MAX_RISK_PERCENT=0.02
AUJ_MAX_DAILY_LOSS=1000
AUJ_MAX_POSITIONS=5

# Default Trading Parameters
AUJ_DEFAULT_VOLUME=0.1
AUJ_MIN_VOLUME=0.01
AUJ_MAX_VOLUME=10.0

# =============================================================================
# Economic Calendar Configuration
# =============================================================================
# TradingEconomics API Key (optional)
AUJ_TRADINGECONOMICS_API_KEY=your_tradingeconomics_api_key_here

# Custom Economic API Key (optional)
AUJ_CUSTOM_ECONOMIC_API_KEY=your_custom_economic_api_key_here

# =============================================================================
# Notification Configuration
# =============================================================================
# Email Notifications
AUJ_SMTP_SERVER=smtp.gmail.com
AUJ_SMTP_PORT=587
AUJ_SMTP_USERNAME=your_email@gmail.com
AUJ_SMTP_PASSWORD=your_email_password_here
AUJ_FROM_EMAIL=alerts@auj-platform.com
AUJ_TO_EMAIL=admin@auj-platform.com

# Slack Notifications
AUJ_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Discord Notifications
AUJ_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Telegram Notifications
AUJ_TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
AUJ_TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# Monitoring and Analytics
# =============================================================================
# Prometheus Metrics
AUJ_PROMETHEUS_ENABLED=true
AUJ_PROMETHEUS_PORT=9090

# Grafana Configuration
AUJ_GRAFANA_ENABLED=true
AUJ_GRAFANA_PORT=3000
AUJ_GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# Performance Monitoring
AUJ_PERFORMANCE_TRACKING=true
AUJ_METRICS_INTERVAL=30

# =============================================================================
# Backup Configuration
# =============================================================================
# Backup Settings
AUJ_BACKUP_ENABLED=true
AUJ_BACKUP_INTERVAL_HOURS=6
AUJ_BACKUP_RETENTION_DAYS=30
AUJ_BACKUP_PATH=backups

# Remote Backup (optional)
AUJ_REMOTE_BACKUP_ENABLED=false
AUJ_REMOTE_BACKUP_URL=s3://your-backup-bucket/auj-platform
AUJ_AWS_ACCESS_KEY_ID=your_aws_access_key_here
AUJ_AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
# SSL Settings
AUJ_SSL_ENABLED=true
AUJ_SSL_CERT_PATH=/etc/ssl/certs/auj-platform.crt
AUJ_SSL_KEY_PATH=/etc/ssl/private/auj-platform.key

# Let's Encrypt
AUJ_LETSENCRYPT_EMAIL=admin@auj-platform.com
AUJ_LETSENCRYPT_DOMAINS=api.auj-platform.com,dashboard.auj-platform.com

# =============================================================================
# Container Configuration (if using Docker)
# =============================================================================
# Docker Settings
AUJ_CONTAINER_MODE=false
AUJ_DOCKER_NETWORK=auj_network

# Container Resource Limits
AUJ_CONTAINER_MEMORY_LIMIT=4g
AUJ_CONTAINER_CPU_LIMIT=2.0

# =============================================================================
# Development and Testing (set to false in production)
# =============================================================================
# Development Flags
AUJ_DEVELOPMENT_MODE=false
AUJ_TEST_MODE=false
AUJ_MOCK_TRADING=false

# Testing Configuration
AUJ_TEST_ACCOUNT_BALANCE=10000
AUJ_TEST_LATENCY_MS=0
AUJ_TEST_ERROR_RATE=0.0

# =============================================================================
# Legacy MT5 Configuration (Windows fallback only)
# =============================================================================
# MT5 Configuration (disabled by default on Linux)
AUJ_MT5_ENABLED=false
AUJ_MT5_LOGIN=68238986
AUJ_MT5_PASSWORD=your_mt5_password_here
AUJ_MT5_SERVER=RoboForex-Pro

# =============================================================================
# Feature Flags
# =============================================================================
# Core Features
AUJ_METAAPI_ENABLED=true
AUJ_STREAMING_ENABLED=true
AUJ_TRADING_ENABLED=true

# Advanced Features
AUJ_ML_ENABLED=true
AUJ_SENTIMENT_ANALYSIS=true
AUJ_NEWS_INTEGRATION=true
AUJ_ECONOMIC_CALENDAR=true

# Linux Optimizations
AUJ_LINUX_OPTIMIZED=true
AUJ_CROSS_PLATFORM=true
AUJ_MT5_DIRECT_DISABLED=true

# =============================================================================
# System Configuration
# =============================================================================
# System Limits
AUJ_MAX_MEMORY_MB=4096
AUJ_MAX_CPU_PERCENT=80
AUJ_MAX_FILE_DESCRIPTORS=65535

# Process Management
AUJ_WORKER_PROCESSES=4
AUJ_WORKER_TIMEOUT=30
AUJ_GRACEFUL_SHUTDOWN_TIMEOUT=60

# Network Configuration
AUJ_CONNECTION_POOL_SIZE=10
AUJ_REQUEST_TIMEOUT=30
AUJ_KEEPALIVE_TIMEOUT=60

# =============================================================================
# Timezone Configuration
# =============================================================================
# Timezone Settings
TZ=UTC
AUJ_TIMEZONE=UTC
AUJ_TRADING_TIMEZONE=UTC

# Market Session Timezones
AUJ_SYDNEY_TZ=Australia/Sydney
AUJ_TOKYO_TZ=Asia/Tokyo
AUJ_LONDON_TZ=Europe/London
AUJ_NEWYORK_TZ=America/New_York